<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:background="#00ffff">

    <Button
        android:id="@+id/ac_main_frag1_bt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="first way in a fragment" />

    <Button
        android:id="@+id/ac_main_frag1_bt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ac_main_frag1_bt1"
        android:text="second way in a fragment" />

    <Button
        android:id="@+id/ac_main_frag1_bt3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ac_main_frag1_bt2"
        android:text="third way in a fragment" />

    <Button
        android:id="@+id/ac_main_frag1_bt4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ac_main_frag1_bt3"
        android:text="fourth way in a fragment" />

    <Button
        android:id="@+id/ac_main_frag1_bt5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ac_main_frag1_bt4"
        android:text="fifth way in a fragment" />

    <Button
        android:id="@+id/ac_main_frag1_bt6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ac_main_frag1_bt5"
        android:text="sixth way in a fragment" />

    <Button
        android:id="@+id/ac_main_frag1_bt7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ac_main_frag1_bt6"
        android:text="seventh way in a fragment" />

    <Button
        android:id="@+id/ac_main_frag1_bt8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ac_main_frag1_bt7"
        android:text="go to next activity for adpter view case1" />

    <Button
        android:id="@+id/ac_main_frag1_bt9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ac_main_frag1_bt8"
        android:text="go to next activity for adpter view case2" />

    <Button
        android:id="@+id/ac_main_frag1_bt10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ac_main_frag1_bt9"
        android:text="go to next activity for adpter view case2" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ac_main_frag1_bt10"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="it's a fragment here"
        android:textSize="20sp" />

</RelativeLayout>
